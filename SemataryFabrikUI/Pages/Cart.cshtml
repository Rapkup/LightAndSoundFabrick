@page
@model SemataryFabrikUI.Pages.CartModel
@{
    ViewData["Title"] = "Корзина";
}

<div class="container mt-4">
    <h2>Ваша корзина</h2>
    @if (Model.CartItems.Any())
    {
        <div class="row">
            <div class="col-md-8">
                <table class="table table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th style="width: 40%">Товар</th>
                            <th>Цена</th>
                            <th>Количество</th>
                            <th>Скидка</th>
                            <th>Сумма</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CartItems)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="@item.ImagePath" alt="@item.ItemName"
                                             class="img-thumbnail" style="width: 80px; margin-right: 15px;">
                                        <div>
                                            <h6>@item.ItemName</h6>
                                            @if (item.StartRentDate.HasValue && item.EndRentDate.HasValue)
                                            {
                                                <div class="text-muted small">
                                                    Аренда: @item.StartRentDate.Value.ToString("d") - @item.EndRentDate.Value.ToString("d")
                                                    <button type="button" class="btn btn-link btn-sm text-primary p-0 ms-2"
                                                            data-bs-toggle="modal" data-bs-target="#editRentalDatesModal-@item.CartItemId">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                </div>

                                                <!-- Modal для редактирования дат аренды -->
                                                <div class="modal fade" id="editRentalDatesModal-@item.CartItemId" tabindex="-1" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title">Изменить даты аренды</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <form method="post" asp-page-handler="UpdateRentalDates">
                                                                <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                                                <div class="modal-body">
                                                                    <div class="mb-3">
                                                                        <label class="form-label">Начало аренды</label>
                                                                        <input type="date" name="startRentDate"
                                                                               value="@item.StartRentDate?.ToString("yyyy-MM-dd")"
                                                                               class="form-control" required>
                                                                    </div>
                                                                    <div class="mb-3">
                                                                        <label class="form-label">Окончание аренды</label>
                                                                        <input type="date" name="endRentDate"
                                                                               value="@item.EndRentDate?.ToString("yyyy-MM-dd")"
                                                                               class="form-control" required>
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                                                                    <button type="submit" class="btn btn-primary">Сохранить</button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td class="align-middle">@item.Price.ToString("C")</td>
                                <td class="align-middle" style="min-width: 140px">
                                    <form method="post" asp-page-handler="UpdateItem"
                                          class="form-inline">
                                        <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                        <input type="number" name="quantity"
                                               value="@item.Quantity" min="1"
                                               class="form-control form-control-sm"
                                               style="width: 70px;">
                                        <button type="submit"
                                                class="btn btn-link btn-sm text-primary">
                                            <i class="fas fa-sync-alt"></i>
                                        </button>
                                    </form>
                                </td>
                                <td class="align-middle">@item.Discount%</td>
                                <td class="align-middle">
                                    @((item.Price * item.Quantity * (1 - item.Discount / 100m)).ToString("C"))
                                </td>
                                <td class="align-middle">
                                    <form method="post" asp-page-handler="RemoveItem">
                                        <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                        <button type="submit"
                                                class="btn btn-link text-danger">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="col-md-4">
                <div class="card border-primary">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Итоговая информация</h5>

                        <!-- Блок для редактирования даты мероприятия -->
                        @if (!Model.HasRentalItems)
                        {
                            <div class="mb-3">
                                <label class="form-label">Дата мероприятия</label>
                                <form method="post" asp-page-handler="UpdateEventDate" class="input-group">
                                    <input type="date" name="eventDate"
                                           value="@Model.EventDate?.ToString("yyyy-MM-dd")"
                                           class="form-control">
                                    <button type="submit" class="btn btn-outline-primary">
                                        <i class="fas fa-save"></i>
                                    </button>
                                </form>
                            </div>
                        }

                        <div class="d-flex justify-content-between mb-3">
                            <span class="h6">Общая сумма:</span>
                            <span class="h5 text-primary">@Model.TotalPrice.ToString("C")</span>
                        </div>

                        <div class="d-grid gap-2">
                            <form method="post">
                                <button type="submit" asp-page-handler="ClearCart"
                                        class="btn btn-outline-danger mb-2">
                                    <i class="fas fa-trash me-2"></i>Очистить корзину
                                </button>
                                <button type="submit" asp-page-handler="PlaceOrder"
                                        class="btn btn-success mb-2">
                                    <i class="fas fa-check me-2"></i>Оформить заказ
                                </button>
                            </form>
                            <a href="/" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Продолжить покупки
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info mt-4">
            <h4 class="alert-heading">Корзина пуста!</h4>
            <p>Начните добавлять товары из нашего каталога.</p>
            <hr>
            <a href="/" class="btn btn-primary">
                <i class="fas fa-shopping-bag me-2"></i>Перейти к покупкам
            </a>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Инициализация модальных окон
        document.addEventListener('DOMContentLoaded', function() {
            var modalElements = document.querySelectorAll('.modal');
            modalElements.forEach(function(modalEl) {
                new bootstrap.Modal(modalEl);
            });
        });

        // Обработка ошибок валидации дат
        document.querySelectorAll('form').forEach(form => {
            form.addEventListener('submit', function(e) {
                const dateInputs = this.querySelectorAll('input[type="date"]');
                let isValid = true;

                dateInputs.forEach(input => {
                    if (input.hasAttribute('required') && !input.value) {
                        input.classList.add('is-invalid');
                        isValid = false;
                    } else {
                        input.classList.remove('is-invalid');
                    }
                });

                if (!isValid) {
                    e.preventDefault();
                    const errorElement = document.createElement('div');
                    errorElement.className = 'invalid-feedback d-block';
                    errorElement.textContent = 'Пожалуйста, заполните все обязательные поля';
                    this.appendChild(errorElement);
                }
            });
        });
    </script>
}