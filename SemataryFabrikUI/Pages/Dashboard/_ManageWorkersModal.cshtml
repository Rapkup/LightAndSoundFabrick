@model TechLeadModel

<div class="modal fade" id="manageWorkersModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Управление работниками</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-6">
                        <h6>Доступные работники:</h6>
                        @foreach (var worker in Model.GetAvailableWorkers())
                        {
                            <div class="card mb-2">
                                <div class="card-body d-flex justify-content-between align-items-center">
                                    <div>@worker.FirstName</div>
                                    <form method="post" asp-page-handler="AddWorkerToCrew">
                                        <input type="hidden" name="workerId" value="@worker.Id" />
                                        <input type="hidden" name="crewId" value="@Model.SelectedCrewId" />
                                        <button type="submit" class="btn btn-sm btn-success">
                                            <i class="ti ti-plus"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="col-6">
                        <h6>Текущая команда:</h6>
                        @foreach (var worker in Model.GetWorkersForCrew(Model.SelectedCrewId))
                        {
                            <div class="card mb-2">
                                <div class="card-body d-flex justify-content-between align-items-center">
                                    <div>@worker.FirstName</div>
                                    <form method="post" asp-page-handler="RemoveWorkerFromCrew">
                                        <input type="hidden" name="workerId" value="@worker.Id" />
                                        <input type="hidden" name="crewId" value="@Model.SelectedCrewId" />
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="ti ti-minus"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>